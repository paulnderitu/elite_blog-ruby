<%= render('layouts/errors', :object => @answer) %>

  <%= form_for [@question, @answer] do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
  <%= f.select(:user_id) do %>
    <% User.all.each do |usr| %>
      <%= content_tag(:option, usr.name, value: usr.id) %>
    <% end %>
  <% end %>
  <%= f.submit %>
  <% end %>
