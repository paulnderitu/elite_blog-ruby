<%= render "layouts/errors", :object => @question %>

  <%= form_for @question do |f| %>
  <%= f.label :link %>
  <%= f.text_field :link %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.select(:user_id) do %>
    <% User.all.each do |usr| %>
      <%= content_tag(:option, usr.name, value: usr.id) %>
    <% end %>
  <% end %>
  <%= f.submit %>
  <% end %>
